<h1>Listing quotes</h1>




    <% @quotes.each do |quote| %>
      <blockquote class="quote-card blue-card" data-toggle="collapse" data-target="#<%= quote.id%>">
        <p>
          <%= quote.cite %>
        </p>

        <cite>
          <%= quote.progenitor %>
        </cite>
      </blockquote>
      <div id="<%= quote.id%>" class="panel-collapse collapse">
        <div class="panel-body">
          <div class="row">
            <p class="btn btn-primary"><%= link_to 'Show', quote %></p>
            <p class="btn btn-primary"> <%= link_to ' Edit', edit_quote_path(quote) %></p>
            <p class="btn btn-primary">  <%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </div>
        </div>
      </div>

    <% end %>


<br>

