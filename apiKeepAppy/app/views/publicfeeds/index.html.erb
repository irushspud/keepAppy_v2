<h1>Listing publicfeeds</h1>

<ul class="activity-stream">
    <% @publicfeeds.each do |publicfeed| %>
      <li data-toggle="collapse" data-target="#<%= publicfeed.id%>"><i class="fa fa-users icon fa-2x"></i>
        <h4 class="titl"><b><%= publicfeed.title %></b></h4>
        <cite><%= publicfeed.content %> </cite>
        <p class="rate">Rating: <%= publicfeed.rate %></p>
      </li>
      <div id="<%= publicfeed.id%>" class="panel-collapse collapse">
        <div class="panel-body">
          <div class="row">
            <p class="btn btn-primary"><%= link_to 'Show', publicfeed %></p>
            <p class="btn btn-primary"> <%= link_to ' Edit', edit_publicfeed_path(publicfeed) %></p>
            <p class="btn btn-primary">  <%= link_to 'Destroy', publicfeed, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </div>
        </div>
      </div>
    <% end %>
</ul>
<br>


