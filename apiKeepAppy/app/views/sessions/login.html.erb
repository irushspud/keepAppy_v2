<% @page_title = "Moderator | Login" -%>
<div class= "Sign_Form">
  <h1>Log in</h1>
  <%= form_tag(:action => 'login_attempt') do %>
    <p>Username or Email:</br> <%= text_field_tag(:username_or_email) %></p> 
    <p>Password:<br /> <%= password_field_tag :login_password %></p> 
    <%= submit_tag("Log In") %>
  <% end %>
  <p>Don't have an account, then signup</p>
  <%= link_to "Signup", controller: "users", action: "new"  %>
    <a href="/signup"></a>
</div>
