<%= javascript_include_tag "articles.js" %>

<head xmlns="http://www.w3.org/1999/html"><link rel="stylesheet" type="text/scss" href="articles/article_form.scss">
 </head>

<div class="art_frm">
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- Article submission form-->
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
     <%= f.label :image %><br>
     <%= f.file_field :image %>
  </div>
    <div class="actions butn">
      <%= f.submit %>
    </div>
<% end %>
  </div>
<div class="bck_btn">
  <p class="btn-orange-arrow"><%= link_to 'Back', articles_path %></p>
</div>
