<% @page_title = "Moderator| Signup" %>
<div class="Sign_Form">
	<h1>Aritcles and Quotes Moderating Tool</h1>
	<h2>Sign Up</h2>
	<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
		<p>Username: </br> <%= f.text_field :username %> </p>
		<p>Email: </br><%= f.text_field :email%></p>
		<p>Password: </br><%= f.text_field :password%></p>
		<p>Must be more then 6 characters and contain at least one number </p>
		<p>Confirm Password: </br><%= f.text_field :password_confirmation%></p>
		<%= f.submit :Signup %>
	<% end %>
	<% if @user.errors.any? %>
		<ul class="Signup_Errors">
		<% for message_error in @user.errors.full_messages %>
			<li>* <%= message_error %> </li>
		<% end %>
		</ul>
	<% end %>
</div>
